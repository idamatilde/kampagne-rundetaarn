---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import udsigt from "../assets/images/udsigtfrarundetaarn.png";
import mennesker from "../assets/images/people_in_line.png";
---
<MainLayout title="Titel">
	<article class="h-[550vh] bg-auto bg-center bg-no-repeat z-50" style="background-image: url('../../public/rundetaarn_baggrund.png');">
		<div class="panelCon h-full flex flex-col justify-between">
			<div id="pane-5" class="panel">Section 5</div>
			<div id="pane-4" class="panel">Section 4</div>
			<div id="pane-3" class="panel">Section 3</div>
			<div id="pane-2" class="panel h-screen w-100">
				<div class="w-[750px] parallaxelement mx-auto p-10 h-auto bg-no-repeat bg-cover" style="background-image: url('../../public/papir-lap.png');">
				<p class="mx-auto p-16 text-xl"> På toppen af rundetårnet, ligger Europas ældste observatorium, som er førhen blev benyttet af de førende danske astronomer.
				</p></div>
			</div>

			<div id="pane-1" class="panel h-screen w-100 z-10 flex flex-col" >
				<p class="parallaxelement1 w-3/4 mx-auto p-10 bg-slate-50 text-xl">På toppen af rundetårnet, ligger Europas ældste observatorium, som er førhen blev benyttet af de førende danske astronomer.
				</p>
				<Image class="z-10 w-2/4 flex-end mt-[220px]" src={mennesker} alt="udsigt fra rundetårn/bybillede af KBH"/>
				<div class="z-50" style="background-image: url('../../public/udsigtfrarundetaarn.png');"></div>
			</div>
			
		</div>
	</article>
</MainLayout>

<script>
	/* Import af Motion One biblioteket */
	import { animate, stagger, inView, scroll, timeline } from "motion";


	scroll(animate(".parallaxelement", { y: [50, 500] }), {
		target: document.querySelector(".parallaxelement"),
	});

	scroll(animate(".parallaxelement1", { y: [60, 800] }), {
		target: document.querySelector(".parallaxelement1"),
	});

	document.addEventListener("DOMContentLoaded", function() {
  window.scrollTo(0, document.body.scrollHeight);
});
	
	</script>
