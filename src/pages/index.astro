<script>
	/* Import af Motion One biblioteket */
	import { animate, stagger, inView, scroll, timeline } from "motion";


	scroll(animate(".parallaxelement11", { y: [-1000, 30, 1000] }), {
		target: document.querySelector(".parallaxelement11"),
	});

	scroll(animate(".parallaxelement12", { y: [-1400, 60, 500] }), {
		target: document.querySelector(".parallaxelement12"),
	});

	scroll(animate(".parallaxelement13", { y: [-1600, 70, 500] }), {
		target: document.querySelector(".parallaxelement13"),
	});

	scroll(animate(".parallaxelement2", { y: [60, 1000] }), {
		target: document.querySelector(".parallaxelement2"),
	});

	scroll(animate(".parallaxelement3", { y: [60, 1100] }), {
		target: document.querySelector(".parallaxelement3"),
	});
	
	scroll(
    animate(".scrollzoomimg", { 
        scale: [1, 1.5]    
    }),
    { 
      target: document.querySelector(".scrollzoom"),
      offset: ["0.75 end", "end end"]
    }
    )

	document.addEventListener("DOMContentLoaded", function() {
  window.scrollTo(0, document.body.scrollHeight);
});
	
</script>
<script>
	
	let audio = document.getElementById('city-sound');
	
	function playSound() {
		audio.currentTime = 0; // Reset to start
		audio.play();
	}
	
	window.addEventListener('scroll', function() {
		// Check scroll direction
		if (window.scrollY < this.lastScrollY) {
			fadeOutSound();
		}
		this.lastScrollY = window.scrollY; // Store the current scroll position
	});
	
	function fadeOutSound() {
		if (audio.volume > 0) {
			audio.volume -= 0.01; // Decrease volume
		}
	}
	
	// Set initial volume
	audio.volume = 1.0; // Set to max volume initially
	
	
</script>